        "--jerry-libm=ON",
        "--all-in-one=OFF",
        "--mem-heap=70",
        "--profile=%{jerryscript}/jerry-core/profiles/minimal.profile",
        "--toolchain=%{jerryscript}/cmake/toolchain_mcu_artik053.cmake",
        "--compile-flag='-isystem %{tizenrt}/os/include'"
      ],
      "conditional-options": [
        {
          "condition": "'%{build-type}' == 'debug'",
