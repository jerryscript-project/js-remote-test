  "artik530": {
    "build": {
      "cwd": "%{jerryscript}",
      "cmd": "function(print)",
      "args": [
        "JerryScript is not supported for Tizen."
      ]
    }
  },
  "rpi2": {
    "build": {
      "cwd": "%{jerryscript}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--lto=OFF",
        "--jerry-libm=ON",
        "--all-in-one=OFF",
        "--linker-flag=-Wl,-Map=jerry.map",
        "--toolchain=%{jerryscript}/cmake/toolchain_linux_armv7l.cmake",
        "--profile=%{jerryscript}/jerry-core/profiles/minimal.profile"
      ],
      "conditional-options": [
        {
          "condition": "'%{build-type}' == 'debug'",
          "args": ["--debug"]
        },
        {
          "condition": "%{memstat}",
          "args": ["--mem-stats=ON", "--debug"]
        },
        {
          "condition": "%{debugger}",
          "args": [
            "--jerry-debugger=ON"
          ]
        },
        {
          "condition": "%{es5.1-profile-build}",
          "args": ["--profile=%{jerryscript}/jerry-core/profiles/es5.1.profile"]
        },
        {
          "condition": "%{es2015subset-profile-build} or %{test-build}",
          "args": ["--profile=%{jerryscript}/jerry-core/profiles/es2015-subset.profile"]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{jerryscript}/build/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{jerryscript}/build/bin/jerry",
        "dst": "%{build-dir}/jerry"
      },
      {
        "src": "%{jerryscript}/build/jerry-main/jerry.map",
        "dst": "%{build-dir}/linker.map"
      },
      {
        "src": "%{testsuite}",
        "dst": "%{build-dir}/tests"
      },
      {
        "src": "%{js-remote-test}/jstest/resources/etc/tester.py",
        "dst": "%{build-dir}/tester.py"
      }
    ]
  }
}
